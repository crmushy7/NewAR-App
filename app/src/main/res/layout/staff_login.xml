<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card_bg_withborder"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cancel_dialogue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_icon"
            android:layout_gravity="end"
            android:padding="5sp"
            android:layout_marginTop="8sp"/>
        <TextView
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOR CAFETERIA STAFFS ONLY!"
            android:layout_marginTop="8sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLEASE SIGN IN TO ACCESS THE STAFF FUNCTIONALITIES"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="22sp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginTop="10sp"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/staffUsername"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:paddingLeft="10sp"
            android:inputType="textShortMessage"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/card_bg_withborder"
            android:hint="Enter Username"
            android:layout_marginTop="8sp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="8sp"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/staff_password"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:paddingLeft="10sp"
            android:inputType="textShortMessage"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/card_bg_withborder"
            android:hint="Enter password"
            android:layout_marginTop="8sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_staffLogin"
            android:layout_width="170sp"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/login"
            android:text="SIGN IN"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>