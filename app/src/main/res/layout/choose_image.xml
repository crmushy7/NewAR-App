<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/card_bg_withborder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose from:"
        android:layout_margin="10sp"
        android:textSize="18sp"
        android:textStyle="bold|normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:gravity="center"
            android:layout_margin="1sp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/upl_choosefromFile"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/card_bg_withborder"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rp_fileManager"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/file_manager"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File"
                    android:textSize="18sp"
                    android:textStyle="bold|normal"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/upl_choosefromCamera"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/card_bg_withborder"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textSize="18sp"
                    android:textStyle="bold|normal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Preview"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textSize="22sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="210sp"
            android:layout_height="210sp"
            app:cardCornerRadius="1000sp">
            <ImageView
                android:id="@+id/upl_previewImage"
                android:layout_width="210sp"
                android:layout_height="210sp"
                android:scaleType="fitXY"
                android:src="@drawable/image_placeholder"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="30sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/login"
        android:textAllCaps="false"
        android:layout_marginTop="-15sp"
        android:padding="10sp"
        android:id="@+id/ci_confirmbtn"
        />

</LinearLayout>