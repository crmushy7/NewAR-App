<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card_bg_withborder"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/update_passwordtv"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="8sp"
            android:textStyle="bold"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/update_passwordet"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:paddingLeft="10sp"
            android:inputType="textShortMessage"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/editbg"
            android:hint="Enter new password"
            android:layout_marginTop="8sp"/>
        <TextView
            android:id="@+id/update_tabletv"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Number"
            android:layout_marginTop="8sp"
            android:textStyle="bold"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/update_tableet"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:paddingLeft="10sp"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/editbg"
            android:hint="Enter table number"
            android:layout_marginTop="8sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/password_updateButton"
            android:layout_width="match_parent"
            android:layout_height="65sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/login"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"/>
    </LinearLayout>

</RelativeLayout>